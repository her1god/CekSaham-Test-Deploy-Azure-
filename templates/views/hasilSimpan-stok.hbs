<script>
  // Auto append token ke semua link dan form
  document.addEventListener('DOMContentLoaded', function() {
    const token = '{{token}}';
    
    if (token) {
      // Append token ke semua link
      document.querySelectorAll('a').forEach(link => {
        const href = link.getAttribute('href');
        if (href && !href.includes('token=') && !href.startsWith('#')) {
          const separator = href.includes('?') ? '&' : '?';
          link.setAttribute('href', href + separator + 'token=' + token);
        }
      });
      
      // Append token ke semua form
      document.querySelectorAll('form').forEach(form => {
        const action = form.getAttribute('action');
        if (action && !action.includes('token=')) {
          const separator = action.includes('?') ? '&' : '?';
          form.setAttribute('action', action + separator + 'token=' + token);
        }
      });
    }
  });
</script>

